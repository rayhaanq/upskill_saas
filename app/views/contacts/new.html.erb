<div id="contact-form-content" class="container">

  <h1 class="text-center">Contact Form</h1>
  <div class="row">

    <div class="card card-block bg-faded">

      <div class="offset-md-3 col-md-6">

        <%= form_for "/contacts" do |f| %>

        <div class="form-group row">
          <%= f.label :name, 'Name: ', class: 'col-sm-3 col-md-4' %>
          <%= f.text_field :name, class: 'form-control col-sm-9 col-md-8' %>
        </div>

        <div class="form-group row">
          <%= f.label :email, 'Email: ', class: 'col-sm-3 col-md-4' %>
          <%= f.text_field :email, class: 'form-control col-sm-9 col-md-8' %>
        </div>

        <div class="form-group row">
          <%= f.label :comments, 'Comments: ', class: 'col-sm-3 col-md-4' %>
          <%= f.text_field :comments, class: 'form-control col-sm-9 col-md-8' %>
        </div>

        <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
